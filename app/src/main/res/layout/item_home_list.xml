<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:id="@+id/content"
    android:background="@drawable/selector_no_corner_white_background">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/header_image"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/header_image_default" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/header_image"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/header_image"
        android:text="kunio"
        android:textColor="@color/c7"
        android:textSize="@dimen/t5" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/header_image"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="10dp"
        android:text="kunio"
        android:textColor="@color/c7"
        android:textSize="@dimen/t5" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_image"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:layout_marginEnd="28dp"
        android:maxLines="2"
        android:text="推荐几个优质公众号"
        android:textColor="@color/c8"
        android:textSize="@dimen/t3" />

    <TextView
        android:id="@+id/kind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_marginEnd="43dp"
        android:text="推荐几个优质公众号"
        android:textColor="@color/c1"
        android:textSize="@dimen/t4" />

    <ImageView
        android:id="@+id/collect"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@id/kind"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:src="@drawable/ic_action_no_collect" />
</RelativeLayout>