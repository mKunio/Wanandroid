<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <FrameLayout
        android:id="@+id/footer_container"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center">

        <ViewStub
            android:id="@+id/loading_viewstub"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout="@layout/common_list_footer_loading" />

        <ViewStub
            android:id="@+id/end_viewstub"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout="@layout/common_list_footer_end" />

        <ViewStub
            android:id="@+id/network_error_viewstub"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout="@layout/common_list_footer_network_error" />
    </FrameLayout>


</RelativeLayout>