<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:id="@+id/content"
    android:background="@drawable/selector_no_corner_white_background"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/image"
        android:layout_width="100dp"
        android:layout_height="160dp"
        android:layout_marginStart="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/default_banner" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/image"
        android:maxLines="1"
        android:text="标题"
        android:textColor="@color/c8"
        android:textSize="@dimen/t1" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignStart="@id/title"
        android:layout_below="@id/title"
        android:layout_marginTop="5dp"
        android:maxLines="5"
        android:text="描述"
        android:textColor="@color/c2"
        android:textSize="@dimen/t4" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_alignStart="@id/desc"
        android:layout_below="@id/desc"
        android:layout_marginEnd="10dp"
        android:maxLines="1"
        android:text="http"
        android:textColor="@drawable/selector_c6_c4_text_color"
        android:textSize="@dimen/t6" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:maxLines="3"
        android:text="时间"
        android:textColor="@color/c2"
        android:textSize="@dimen/t6" />


    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/image"
        android:maxLines="3"
        android:text="作者"
        android:textColor="@color/c2"
        android:textSize="@dimen/t6" />
</RelativeLayout>